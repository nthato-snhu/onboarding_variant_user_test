#   LLM_MODEL=azure_openai:mas-gs-no-guardrails-gpt-4o      -> uses AZURE_OPENAI_*
#   LLM_MODEL=anthropic:claude-3-5-sonnet-20241022           -> uses ANTHROPIC_API_KEY

LLM_MODEL=gpt-4o

